{
  "version": 3,
  "cmakeMinimumRequired": {
      "major": 3,
      "minor": 21,
      "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "static",
      "inherits": "default",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "OFF"
      }
    },
    {
      "name": "shared",
      "inherits": "default",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "static",
      "configurePreset": "static"
    },
    {
      "name": "shared",
      "configurePreset": "shared"
    }
  ]
}